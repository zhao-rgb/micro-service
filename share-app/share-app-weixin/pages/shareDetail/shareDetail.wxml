<!--pages/duihuanSuccess/duihuanSuccess.wxml-->
<view class="container">

  <view class="introduction">
    <text class="title">{{share.title}}</text>
    <view class="row">
      <text class="row-a">作者：{{share.author}}</text>
      <text class="row-a">作者：{{share.author}}</text>
      <text class="row-a">下载数：{{share.buyCount}}</text>
    </view>
    <image class="share-img" src="{{share.cover}}"></image>
  </view>

  <view class="summary">
    <text selectable>{{share.summary}}</text>
  </view>

  <view class="duihuan">
    <text>积分：</text>
    <text class="price">$ {{share.price}}</text>
    <text class="btn" data-item="{{share}}" bindtap="duihuan">兑换</text>
  </view>

</view>